package sort;
import java.util.Scanner;

public class Sort {
	private int n;
	private int []a=new int[100];
public void input() 
{
	Scanner kb=new Scanner(System.in);
	System.out.println("enter n: ");
	n=(kb.nextInt());
	System.out.println("nhap mang: ");
	for(int i=0;i<n;i++) {
		System.out.print("a["+(i+1)+"]:");
		a[i]=kb.nextInt();
	}
}
public void output()
{
	for(int i=0;i<n;i++)
		System.out.print(a[i]+" ");
}
public void BubbleSort()
{
	for(int i=0;i<n;i++)
		for(int j=0;j<n-1;j++)
			if(a[j]>a[j+1]) 
			{
				int tmp=a[j];
				a[j]=a[j+1];
				a[j+1]=tmp;
			}
}
	public static void main(String[] args) {
		Sort s= new  Sort();
		s.input();
		s.output();
		s.BubbleSort();
		System.out.println();
		s.output();
	}

}
